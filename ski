    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('calcBtn').addEventListener('click', function() {
                // 1. ê°’ ê°€ì ¸ì˜¤ê¸°
                const seasonPass = Number(document.getElementById('seasonPass').value) * 10000;
                const gear = Number(document.getElementById('gearCost').value) * 10000;
                const trip = Number(document.getElementById('tripCost').value) * 10000;
                const visits = Number(document.getElementById('visits').value);
                const years = Number(document.getElementById('years').value);

                if(visits <= 0 || years <= 0) {
                    alert("íšŸìˆ˜ì™€ ê¸°ê°„ì„ ì˜¬ë°”ë¥´ê²Œ ì…ë ¥í•´ì£¼ì„¸ìš”.");
                    return;
                }

                // 2. ê³„ì‚° ë¡œì§
                // ì‹œì¦Œê¶Œ (ë§¤ë…„ êµ¬ë§¤ ê°€ì •)
                const annualPass = seasonPass;
                
                // ì¥ë¹„ ì—°ê°„ ê°ê°€ìƒê°
                const annualGear = gear / years;
                
                // ì—°ê°„ ì¶œì • ë¹„ìš©
                const annualTrip = trip * visits;

                // ì—°ê°„ ì´ë¹„ìš©
                const totalAnnualCost = annualPass + annualGear + annualTrip;

                // 1íšŒë‹¹ ë¹„ìš©
                const costPerTrip = totalAnnualCost / visits;

                // ë¦¬í”„íŠ¸ê¶Œ ë‹¨í’ˆ ê°€ê²© ë¹„êµ (ì£¼ë§ ì˜¤í›„ê¶Œ ì•½ 6~8ë§Œì›)
                const liftTicket = 70000;
                
                // 3. ê²°ê³¼ ì¶œë ¥
                const resultArea = document.getElementById('result-area');
                resultArea.style.display = 'block';

                document.getElementById('resCostPerTrip').innerText = Math.round(costPerTrip).toLocaleString() + "ì›";

                // 4. ë¹„êµ ë¬¼ê±´ ë³€ê²½
                let item = "ë¦¬í”„íŠ¸ê¶Œ ë‹¨í’ˆ êµ¬ë§¤";
                
                if(costPerTrip > 500000) item = "5ì„±ê¸‰ í˜¸í…” í˜¸ìº‰ìŠ¤ (1ë°•)";
                else if(costPerTrip > 300000) item = "ì„œìš¸ ì‹œë‚´ íŠ¹ê¸‰ í˜¸í…” ë·”í˜ (2ì¸)";
                else if(costPerTrip > 200000) item = "ì œì£¼ë„ ì™•ë³µ í•­ê³µê¶Œ";
                else if(costPerTrip > 100000) item = "ìµœìƒê¸‰ í•œìš° ì˜¤ë§ˆì¹´ì„¸";
                else if(costPerTrip > 70000) item = "ë¦¬í”„íŠ¸ê¶Œ í˜„ì¥ êµ¬ë§¤";
                
                document.getElementById('resCompare').innerText = item;
            });
        });
