    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('calcBtn').addEventListener('click', function() {
                // 1. ê°’ ê°€ì ¸ì˜¤ê¸°
                const monthly = Number(document.getElementById('monthlyCost').value) * 10000;
                const rate = Number(document.getElementById('readRate').value);
                const years = Number(document.getElementById('years').value);

                if(monthly <= 0 || years <= 0) {
                    alert("ê°’ì„ ì˜¬ë°”ë¥´ê²Œ ì…ë ¥í•´ì£¼ì„¸ìš”.");
                    return;
                }

                // 2. ê³„ì‚° ë¡œì§
                // ì´ ì§€ì¶œ
                const totalSpent = monthly * 12 * years;
                
                // ë‚­ë¹„ì•¡ (ë¯¸ë…ë¥  ë°˜ì˜)
                const wasteRate = (100 - rate) / 100;
                const totalWaste = totalSpent * wasteRate;

                // ì „ìì±… êµ¬ë… í™˜ì‚° (ì›” 1ë§Œì› ê°€ì •)
                const ebookCost = 10000 * 12; // ì—° 12ë§Œì›
                const ebookYears = totalWaste / ebookCost;

                // 3. ê²°ê³¼ ì¶œë ¥
                const resultArea = document.getElementById('result-area');
                resultArea.style.display = 'block';

                document.getElementById('resTotal').innerText = Math.round(totalWaste).toLocaleString() + "ì›";
                document.getElementById('resPercent').innerText = (100 - rate);
                document.getElementById('resEbook').innerText = ebookYears.toFixed(1) + "ë…„";
            });
        });
    </script>
